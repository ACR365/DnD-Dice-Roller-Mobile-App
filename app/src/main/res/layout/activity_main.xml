<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayoutMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/d4_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="D4"
        app:layout_constraintBottom_toTopOf="@+id/d8_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/d6_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="D6"
        app:layout_constraintBottom_toTopOf="@+id/d10_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d8_btn" />

    <Button
        android:id="@+id/d10_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="D10"
        app:layout_constraintBottom_toTopOf="@+id/d12_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d6_btn" />

    <Button
        android:id="@+id/d20_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="250dp"
        android:text="d20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d12_btn" />

    <Button
        android:id="@+id/d12_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="D12"
        app:layout_constraintBottom_toTopOf="@+id/d20_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d10_btn" />

    <Button
        android:id="@+id/d8_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="D8"
        app:layout_constraintBottom_toTopOf="@+id/d6_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d4_btn" />

    <ImageButton
        android:id="@+id/collection_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/history_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/collection_btn_draft_foreground" />

    <ImageButton
        android:id="@+id/history_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/collection_btn"
        app:layout_constraintStart_toEndOf="@+id/settings_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/history_btn_draft_foreground" />

    <ImageButton
        android:id="@+id/settings_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/history_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_btn_draft_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>